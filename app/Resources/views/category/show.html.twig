{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="card text-xs-center">
        <div class="card-header default-color-dark white-text">
            Category
        </div>
        <div class="card-block">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Observation</th>
                    <td>{{ category.observation }}</td>
                </tr>
                </tbody>
            </table>
            <a href="{{ path('category_index') }}" class="btn btn-default">Back to the list</a>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-blue-grey">Edit</a>
        </div>
        <div class="card-footer text-muted default-color-dark white-text">
            <p>Created by: <i>{{ category.user.username }}</i></p>
        </div>
    </div>
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    {{ form_end(delete_form) }}
</div>
{% endblock %}
