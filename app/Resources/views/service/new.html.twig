{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="card text-xs-center">
            <div class="card-header default-color-dark white-text">
                Service creation
            </div>
            <div class="card-block">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                {{ form_end(form) }}

            </div>
            <div class="card-footer text-muted default-color-dark white-text">
                <p>Creating by: <i>{{ app.user.username }}</i></p>
            </div>
        </div>
        <a href="{{ path('service_index') }}" class="btn btn-default">Back to the list</a>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function(){
            showCorrectPaymentDate($("#{{ form.isRecurrence.vars.id }}"));
            $("#{{ form.isRecurrence.vars.id }}").on('click', function(){
                showCorrectPaymentDate($(this));
            })
        });

        function showCorrectPaymentDate($recurrenceCheck){
            if($recurrenceCheck.is(':checked')){
                $('#{{ form.paymentDate.vars.id }}').parent().hide();
                $('#{{ form.paymentDay.vars.id }}').parent().show();
            }else{
                $('#{{ form.paymentDate.vars.id }}').parent().show();
                $('#{{ form.paymentDay.vars.id }}').parent().hide();
            }
        }
    </script>
{% endblock %}